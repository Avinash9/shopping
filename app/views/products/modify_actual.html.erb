<style type="text/css">
    .Submit_Class {height:30px; width:100px}
</style>

<td width="80%" align="center" valign="top">
  <%= form_for @product, :url => { :controller => :products, :action => :update, :p_id => @modify_product.id } do |f| -%>
      <table border="0" cellpadding="3" cellspacing="3">
        <tr>
          <td align="center" colspan="3">
            <span style="font-size:30px">Welcome <span style="color:red"><b><%= @user.firstname + " " + @user.lastname %></b></span> (Manager)</span>
          </td>
        </tr>
        <tr>
          <td align="center" colspan="3"><h3>Product Administration  - Modify/Delete</h3></td>
        </tr>
        <tr>
          <td colspan="3">&nbsp;</td>
        </tr>
        <tr>
            <td width="40%">Product Name</td>
            <td width="5%">:</td>
            <td><%= f.text_field(:name, :size => 15, :value => @modify_product.name) %></td>
        </tr>
        <tr>
            <td width="40%">Description</td>
            <td width="5%">:</td>
            <td><%= f.text_field(:description, :size => 15, :value => @modify_product.description) %></td>
        </tr>
        <tr>
          <td width="40%">Quantity</td>
          <td width="5%">:</td>
          <td><%= f.text_field(:quantity, :size => 15, :value => @modify_product.quantity) %></td>
        </tr>
        <tr>
          <td width="40%">Price</td>
          <td width="5%">:</td>
          <td><%= f.text_field(:price, :size => 15, :value => @modify_product.price) %></td>
        </tr>
        <tr>
          <td width="40%">Category</td>
          <td width="5%">:</td>
          <td><%= f.text_field(:category, :size => 15, :value => @modify_product.category) %></td>
        </tr>
        <tr>
          <td width="40%">Related Type</td>
          <td width="5%">:</td>
          <td><%= f.text_field(:related_type, :size => 15, :value => @modify_product.related_type) %></td>
        </tr>
        <tr>
          <td>Old/New</td>
          <td>:</td>
          <td>
            <select id="product_old_new" name="product[old_new]" size="1">
              <% if @modify_product.old_new == "Old" %>
                  <option value="Old" selected>Old</option>
                  <option value="New">New</option>
              <% else %>
                  <option value="Old">Old</option>
                  <option value="New" selected>New</option>
              <% end %>
            </select>
          </td>
        </tr>
        <tr>
          <td width="40%">Image URL</td>
          <td width="5%">:</td>
          <td><%= f.text_field(:image_url, :size => 15, :value => @modify_product.image_url) %></td>
        </tr>
        <tr>
          <td>&nbsp;</td>
          <td>&nbsp;</td>
          <td>&nbsp;</td>
        </tr>
        <tr>
          <td colspan="3">
            <%=	f.submit :value => 'Modify', :class => 'Submit_Class' %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <%= f.submit :value => 'Cancel', :class => 'Submit_Class'%>
          </td>
        </tr>
      </table>
  <% end -%>
</td>