<style type="text/css">
    .Submit_Class {height:30px; width:100px}
</style>

<td width="80%" valign="top" align="center">
	<table border="0" cellpadding="0" cellspacing="0" height="100%">
        <%= form_for @order, :url => { :controller => :users, :action => :checkout_confirm } do |f| -%>
            <tr>
                <td colspan="3" align="left">&nbsp;</td>
            </tr>
            <tr>
				<td colspan="3" align="center">
					<span style="font-size:30px">Please complete the following Payment option :</span><hr />
				</td>
			</tr>
			<tr>
				<td colspan="3" align="left">&nbsp;</td>
			</tr>
			<tr>
				<th colspan="2" align="center">Shipping Address</th>
			</tr>
			<tr>
				<td style="color:#990000; font-weight:bold">Street No</td>
				<td>:</td>
				<td width="70%"><input type="text" id="s_str_no" name="s_str_no" size="15" maxlength="10" value="<%= @user.s_addr_str_no %>" disabled="true"/></td>
			</tr>
			<tr>
				<td style="color:#990000; font-weight:bold">Street Name</td>
				<td>:</td>
				<td><input type="text" id="s_str_name" name="s_str_name" size="15" maxlength="10" value="<%= @user.s_addr_str_name %>" disabled="true" /></td>
			</tr>
			<tr>
				<td style="color:#990000; font-weight:bold">City</td>
				<td>:</td>
				<td><input type="text" id="s_city" name="s_city" size="20" maxlength="15" value="<%= @user.s_addr_city %>" disabled="true"/></td>
			</tr>
			<tr>
				<td style="color:#990000; font-weight:bold">State</td>
				<td>:</td>
				<td><input type="text" id="s_state" name="s_state" size="20" maxlength="15" value="<%= @user.s_addr_state %>" disabled="true" /></td>
			</tr>
			<tr>
				<td style="color:#990000; font-weight:bold">Zip</td>
				<td>:</td>
				<td><input type="text" id="s_zip" name="s_zip" size="7" maxlength="5" value="<%= @user.s_addr_zip %>" disabled="true" /></td>
			</tr>
			<tr>
				<td>&nbsp;</td>
			</tr>
			<tr>
				<th colspan="2" align="center">Billing Address</th>
			</tr>
			<tr>
				<td style="color:#990000; font-weight:bold">Street No</td>
				<td>:</td>
				<td><input type="text" id="b_str_no" name="b_str_no" size="15" maxlength="10" value="<%= @user.b_addr_str_no %>" disabled="true" /></td>
			</tr>
			<tr>
				<td style="color:#990000; font-weight:bold">Street Name</td>
				<td>:</td>
				<td><input type="text" id="b_str_name" name="b_str_name" size="15" maxlength="10" value="<%= @user.b_addr_str_name %>" disabled="true" /></td>
			</tr>
			<tr>
				<td style="color:#990000; font-weight:bold">City</td>
				<td>:</td>
				<td><input type="text" id="b_city" name="b_city" size="20" maxlength="15" value="<%= @user.b_addr_city %>" disabled="true" /></td>
			</tr>
			<tr>
				<td style="color:#990000; font-weight:bold">State</td>
				<td>:</td>
				<td><input type="text" id="b_state" name="b_state" size="20" maxlength="15" value="<%= @user.b_addr_state %>" disabled="true" /></td>
			</tr>
			<tr>
				<td style="color:#990000; font-weight:bold">Zip</td>
				<td>:</td>
				<td><input type="text" id="b_zip" name="b_zip" size="7" maxlength="5" value="<%= @user.s_addr_zip %>" disabled="true" /></td>
			</tr>
			<tr><td>&nbsp;</td></tr>
			<tr>
				<th colspan="2">Select your Credit Card option :-</th>
			</tr>
			<tr>
				<td style="color:#990000; font-weight:bold">Select type of Card</td>
				<td>:</td>
				<td>
                    <select id="order_cc_type" name="order[cc_type]" size="1">
                        <option value="Visa" selected>Visa</option>
                        <option value="Mastercard">Mastercard</option>
                        <option value="Amex">Amex</option>
                    </select>
				</td>
			</tr>
			<tr>
				<td style="color:#990000; font-weight:bold">Card No.</td>
				<td>:</td>
				<td><%= f.text_field(:card_no, :size => 20) %></td>
			</tr>
			<tr><td>&nbsp;</td></tr>
			<tr>
				<td colspan="3" align="center">
                    <%= f.hidden_field(:user_id, :value => @user.id) %>
                    <%= f.hidden_field(:status, :value => "Ordered") %>
                    <%=	f.submit :value => 'Make Payment', :class => 'Submit_Class' %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
				</td>
			</tr>
        <% end -%>
	</table>
</td>