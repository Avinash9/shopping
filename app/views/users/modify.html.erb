<style type="text/css">
    .Submit_Class {height:30px; width:100px}
</style>

<td width="80%" align="center" valign="top">
    <table border="0" cellpadding="0" cellspacing="0">
        <tr>
            <td align="center" colspan="3">
              <span style="font-size:30px">Welcome <span style="color:red"><b><%= @user.firstname + " " + @user.lastname %></b></span> (Manager)</span>
            </td>
        </tr>
        <tr>
            <td align="center" colspan="3">&nbsp;</td>
        </tr>
        <tr>
            <td align="center" colspan="3"><h3>User Administration  -	Edit/Delete</h3></td>
        </tr>
        <tr>
            <td colspan="3">&nbsp;</td>
        </tr>
        <tr>
            <td align="top">
                <table border="1" width="100%" cellpadding="10" cellspacing="0">
                    <tr>
                        <th>User Name</th>
                        <th>User Type</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                    <% for user in @user_all  %>
                        <tr>
                            <td><%= user.username %></td>
                            <td><%= user.user_type %></td>
                            <td><%= user.firstname %></td>
                            <td><%= user.lastname %></td>
                            <td><%= link_to "Edit", :controller => "users", :action => "modify_actual", :u_m_id => user.id %></td>
                            <td><%= link_to "Delete", :controller => "users", :action => "destroy", :u_m_id => user.id %></td>
                        </tr>
                    <% end %>
                </table>
            </td>
        </tr>
        <tr>
            <td align="center">&nbsp;</td>
        </tr>
        <tr>
            <td align="center">
              <%= form_for @user_all, :url => { :controller => :admin, :action => :index }  do |f| -%>
                <%= f.submit "Back", :class => 'Submit_Class' %>
              <% end -%>
            </td>
        </tr>
    </table>
</td>