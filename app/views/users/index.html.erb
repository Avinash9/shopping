<style type="text/css">
    .Submit_Class {height:30px; width:150px}
</style>

<td width="50%" valign="top">
    <table border="0" cellpadding="3" cellspacing="3" width="100%" height="100%">
        <tr>
            <td style="color:red; font-family:verdana; font-size:40px" align="center">Top selling products<hr /></td>
        </tr>
        <tr>
            <td>&nbsp;</td>
        </tr>
    </table>
</td>
<td width="30%" valign="top">
    <table border="0" cellpadding="0" cellspacing="0" width="100%" height="100%">
        <tr>
            <td>
                <table border="0" align="left" width="100%">
                    <%= form_for(@user, :as => :login_user, :url => { :action => :login }, :html => {:name => 'user_login' }) do |f| -%>
                        <tr>
                            <td colspan="2" align="left">
                                <span style="font-family:verdana; font-size:20px">Registered Users - Login here</span>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">&nbsp;</td>
                        </tr>
                        <tr>
                            <td style="font-family:verdana; font-size:15px">Username :</td>
                            <td><%= f.text_field(:username, :size => 15) %></td>
                        </tr>
                        <tr>
                            <td style="font-family:verdana; font-size:15px">Password :</td>
                            <td><%= f.password_field(:password, :size => 15)  %></td>
                        </tr>
                        <tr>
                            <td colspan="2">&nbsp;</td>
                        </tr>
                        <tr>
                            <td colspan="2" align="center"><%= f.submit "Login" %></td>
                        </tr>
                        <tr>
                            <td>&nbsp;</td>
                        </tr>
                    <% end %>
                </table>
            </td>
        </tr>
        <tr>
            <td valign="top" align="center">
                <span style="font-family:verdana; font-size:20px">New Users Please register here</span><br /><br /><br />
                <%= form_tag('/register') do %>
                  <%= submit_tag 'Register', :class => 'Submit_Class' %>
                <% end -%>
            </td>
        </tr>
    </table>
</td>